# ThreadKit Load Testing Configuration
# Expects Redis running locally on default port

MODE=standalone

# Redis (local)
REDIS_URL=redis://localhost:6379

# Server ports
HTTP_PORT=8080
WS_PORT=8081

# JWT
JWT_SECRET=loadtest-secret-not-for-production
JWT_EXPIRY_HOURS=24

# Disable rate limiting for load testing
RATE_LIMIT_ENABLED=false

# Standalone mode config
SITE_ID=00000000-0000-0000-0000-000000000001
SITE_NAME="Load Test Site"
SITE_DOMAIN=localhost
PROJECT_ID_PUBLIC=tk_pub_loadtest_public_key_12345
PROJECT_ID_SECRET=tk_sec_loadtest_secret_key_12345
MODERATION_MODE=none

# Allowed origins for load testing
ALLOWED_ORIGINS=

# Logging (minimal for performance)
RUST_LOG=warn
