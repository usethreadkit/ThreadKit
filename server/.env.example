# ThreadKit Server Configuration

# Mode: standalone (OSS) or saas
MODE=standalone

# Redis
REDIS_URL=redis://localhost:6379

# Server ports
HTTP_PORT=8080
WS_PORT=8081

# JWT - generate a secure secret with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
JWT_EXPIRY_HOURS=168

# Rate limiting
RATE_LIMIT_ENABLED=true

# Origin validation
# Allow localhost/127.0.0.1/::1 origins (set to true for local development only)
ALLOW_LOCALHOST_ORIGIN=true

# Standalone mode config
SITE_ID=
SITE_NAME=My Site
SITE_DOMAIN=localhost
API_KEY_PUBLIC=tk_pub_your_public_key
API_KEY_SECRET=tk_sec_your_secret_key
MODERATION_MODE=none

# OAuth (optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8080/v1/auth/google/callback

OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=
OAUTH_GITHUB_REDIRECT_URL=http://localhost:8080/v1/auth/github/callback

# Cloudflare Turnstile (optional - bot protection)
# Get keys at https://dash.cloudflare.com/turnstile
TURNSTILE_SECRET_KEY=

# Logging
RUST_LOG=info,threadkit=debug
