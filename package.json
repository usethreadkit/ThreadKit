{
  "name": "threadkit-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter website dev",
    "build": "pnpm --filter @threadkit/react build && pnpm --filter website build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r --filter '@threadkit/*' test:run",
    "test:coverage": "pnpm -r --filter '@threadkit/*' test:run -- --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "version": "node scripts/version.js",
    "version:minor": "node scripts/version.js minor",
    "version:patch": "node scripts/version.js patch",
    "version:major": "node scripts/version.js major",
    "example:react": "pnpm --filter react-example dev",
    "example:vanilla": "pnpm --filter vanilla-example dev",
    "example:svelte": "pnpm --filter svelte-example dev",
    "example:kitchen-sink": "pnpm --filter kitchen-sink dev",
    "example:nextjs": "pnpm --filter nextjs-ssr dev",
    "example:latex": "pnpm --filter @threadkit/example-latex dev",
    "example:i18n": "pnpm --filter @threadkit/example-i18n dev",
    "example:media": "pnpm --filter @threadkit/example-media-preview dev",
    "example:syntax": "pnpm --filter @threadkit/example-syntax-highlight dev",
    "example:turnstile": "pnpm --filter @threadkit/example-turnstile dev",
    "example:ethereum": "pnpm --filter @threadkit/example-ethereum dev",
    "example:solana": "pnpm --filter @threadkit/example-solana dev",
    "outdated": "pnpm -r outdated"
  },
  "devDependencies": {
    "@storybook/addon-links": "10.1.7",
    "@storybook/addon-themes": "10.1.7",
    "@storybook/addon-vitest": "^10.1.7",
    "@storybook/react-vite": "10.1.7",
    "@vitest/browser": "^4.0.15",
    "openapi-typescript": "^7.10.1",
    "playwright": "^1.57.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "10.1.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}