{
  "name": "@threadkit/plugin-syntax-highlight",
  "version": "0.0.3",
  "description": "Syntax highlighting plugin for ThreadKit using Shiki",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm --dts --external react --external @threadkit/react",
    "dev": "tsup src/index.tsx --format esm --dts --external react --external @threadkit/react --watch"
  },
  "peerDependencies": {
    "@threadkit/react": ">=0.0.1",
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "shiki": "^1.24.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "license": "MIT",
  "author": "fantauma",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usethreadkit/threadkit.git"
  },
  "bugs": {
    "url": "https://github.com/usethreadkit/threadkit/issues"
  },
  "homepage": "https://usethreadkit.com"
}
