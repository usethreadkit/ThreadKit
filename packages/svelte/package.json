{
  "name": "@threadkit/svelte",
  "version": "0.2.0",
  "description": "Privacy-first commenting and chat system for Svelte",
  "type": "module",
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./cdn": "./dist/cdn/threadkit.min.js",
    "./cdn/standalone": "./dist/cdn/threadkit.min.js",
    "./cdn/nonbundled-svelte": "./dist/cdn/threadkit.nonbundled-svelte.min.js",
    "./styles": "./dist/styles.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:cdn": "node scripts/build-cdn.js",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@threadkit/core": "workspace:*"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/svelte": "^5.2.6",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.27.1",
    "esbuild-svelte": "^0.8.2",
    "jsdom": "^27.3.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "optionalDependencies": {
    "@threadkit/plugin-latex": "workspace:*",
    "@threadkit/plugin-media-preview": "workspace:*",
    "@threadkit/plugin-syntax-highlight": "workspace:*",
    "dompurify": "^3.3.0",
    "katex": "^0.16.11",
    "shiki": "^3.19.0"
  },
  "keywords": [
    "svelte",
    "comments",
    "chat",
    "commenting-system",
    "disqus-alternative",
    "privacy"
  ],
  "license": "MIT",
  "author": "fantauma",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usethreadkit/threadkit.git"
  },
  "bugs": {
    "url": "https://github.com/usethreadkit/threadkit/issues"
  },
  "homepage": "https://usethreadkit.com"
}
