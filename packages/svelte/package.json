{
  "name": "@threadkit/svelte",
  "version": "1.0.0",
  "description": "Privacy-first commenting and chat system for Svelte",
  "type": "module",
  "svelte": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "dependencies": {
    "@threadkit/core": "workspace:*"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.3",
    "vite": "^6.0.0"
  },
  "optionalDependencies": {
    "katex": "^0.16.11",
    "dompurify": "^3.3.0",
    "shiki": "^1.24.0",
    "@threadkit/plugin-latex": "workspace:*",
    "@threadkit/plugin-syntax-highlight": "workspace:*",
    "@threadkit/plugin-media-preview": "workspace:*"
  },
  "keywords": [
    "svelte",
    "comments",
    "chat",
    "commenting-system",
    "disqus-alternative",
    "privacy"
  ],
  "license": "MIT",
  "author": "fantauma",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usethreadkit/threadkit.git"
  },
  "bugs": {
    "url": "https://github.com/usethreadkit/threadkit/issues"
  },
  "homepage": "https://usethreadkit.com"
}
