{
    "name": "threadkit/wordpress-plugin",
    "description": "WordPress plugin for ThreadKit - real-time comments and chat",
    "type": "wordpress-plugin",
    "license": "MIT",
    "keywords": ["wordpress", "plugin", "comments", "chat", "real-time"],
    "homepage": "https://threadkit.com",
    "authors": [
        {
            "name": "ThreadKit",
            "homepage": "https://threadkit.com"
        }
    ],
    "support": {
        "issues": "https://github.com/threadkit/threadkit/issues",
        "source": "https://github.com/threadkit/threadkit"
    },
    "require": {
        "php": ">=7.4",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-phpunit/wp-phpunit": "^6.4"
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress src/ threadkit.php",
        "phpcbf": "phpcbf --standard=WordPress src/ threadkit.php",
        "install-wp-tests": "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    },
    "extra": {
        "installer-name": "threadkit"
    }
}
